<h2><%= @item.title %></h2>
<p>
  <%= @item.description %>
</p>

<%= link_to '<i class="fa fa-angle-left"></i> Back'.html_safe, root_path %>
<%= link_to '<i class="fa fa-pencil"></i> Edit'.html_safe, edit_item_path(@item) %>
<%= link_to '<i class="fa fa-trash"></i> Delete'.html_safe,  item_path(@item), method: :delete, data: {confirm: "Are you sure?"} %>
